<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="50dp"
    android:background="@drawable/skisse"
    android:orientation="vertical"
    android:paddingTop="200dp"> //Må bytte bakgrunn

    <TextView
        android:id="@+id/input3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_rowWeight="0.8"/>//Rowweight fordeler plass på skjermen
    <android.inputmethodservice.ExtractEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="0.2"
        android:id="@+id/editText"/>
    <Button
        android:id="@+id/start"
        android:text="start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <Button
        android:id="@+id/confirm"
        android:text="@string/confirm"
        android:onClick="nextQuestion"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/one"
            android:text="@string/one"
            android:layout_row="1"
            android:layout_column="0" />
        <Button
            android:id="@+id/two"
            android:text="@string/two"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            android:id="@+id/three"
            android:text="@string/three"
            android:layout_row="1"
            android:layout_column="2"/>
        <Button
            android:id="@+id/four"
            android:text="@string/four"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:id="@+id/five"
            android:text="@string/five"
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            android:id="@+id/six"
            android:text="@string/six"
            android:layout_row="2"
            android:layout_column="2"/>
        <Button
            android:id="@+id/seven"
            android:text="@string/seven"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:id="@+id/eight"
            android:text="@string/eight"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:id="@+id/nine"
            android:text="@string/nine"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            android:id="@+id/quit"
            android:text="@string/quit"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="quitquiz"/>
        <Button
            android:id="@+id/zero"
            android:text="@string/zero"
            android:layout_row="4"
            android:layout_column="1"/>
        <Button
            android:id="@+id/slett"
            android:text="@string/slett"
            android:layout_row="4"
            android:layout_column="2" />
    </GridLayout>
</LinearLayout>