<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout="@layout/activity_preferences">
    <ListPreference
        android:key="language"
        android:summary="@string/langhelp"
        android:defaultValue="no"
        android:title="@string/language"
        android:entries="@array/languages"
        android:entryValues="@array/language"/>
    <ListPreference
        android:key="count"
        android:summary="@string/counthelp"
        android:defaultValue="5"
        android:title="@string/count"
        android:entries="@array/gameNrs"
        android:entryValues="@array/gameNr"/>
</PreferenceScreen>